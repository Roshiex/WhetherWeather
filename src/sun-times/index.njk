<section class="section">
  <div class="container" style="max-width: 1100px;">

    <h1 class="title has-text-centered has-text-light mb-6">
      Sunrise &amp; Sunset Times
    </h1>

    <div class="sun-times-grid">
      {% for city in cities.cities %}
      <div class="sun-times-card">

        <div class="sun-times-city">
          {{ city.name }}
        </div>

        <div class="sun-row">

          <div class="sun-box sunrise">
            <img src="/images/sunrise.png" class="sun-icon" alt="Sunrise icon">
            <p>Sunrise</p>
            <strong>{{ city.sunrise }}</strong>
          </div>

          <div class="sun-box sunset">
            <img src="/images/sun-set.png" class="sun-icon" alt="Sunset icon">
            <p>Sunset</p>
            <strong>{{ city.sunset }}</strong>
          </div>

        </div>

      </div>
      {% endfor %}
    </div>

  </div>
</section>
