<section class="section" style="margin-top: 3rem;">
  <div class="container">

    <div class="columns is-multiline is-centered">

      {% for city in cities.cities %}
      <div class="column is-one-third">

        <a href="/cities/{{ city.slug }}/">
          <div
            class="weather-card has-text-centered"
          >
            <p class="title is-4 has-text-light mb-2">
              {{ city.name }}
            </p>

            <img
              src="/images/{{ city.today.condition }}.png"
              alt="{{ city.today.condition }}"
              class="weather-icon"
            >

            <p class="is-size-3 has-text-weight-bold">
              {{ city.today.maxTempC }}Â°C
            </p>
          </div>
        </a>

      </div>
      {% endfor %}

    </div>

  </div>
</section>
