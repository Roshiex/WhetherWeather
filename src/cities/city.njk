---
layout: base.njk
pagination:
<<<<<<< HEAD
  data: "cities.cities"
  size: 1
  alias: city
permalink: "/cities/{{ city.slug }}/index.html"
---



<section class="section">
  <div class="container">

    <h2 class="title has-text-centered">
      {{ city.name }}, {{ city.country }}
    </h2>

    <div class="box has-text-centered">
      <h3 class="subtitle">Today</h3>
      <img src="/images/{{ city.today.condition }}.png" class="weather-icon">
      <p>Max Temp: {{ city.today.maxTempC }}°C</p>
      <p>Wind: {{ city.today.maxWindKmh }} km/h</p>
    </div>

    <div class="box has-text-centered">
      <h3 class="subtitle">Current Hour</h3>
      <p>{{ city.currentHour.tempC }}°C</p>
      <p>{{ city.currentHour.windKmh }} km/h</p>
    </div>

    <h3 class="subtitle has-text-centered mt-5">
      Weekly Forecast
    </h3>

    <div class="columns is-mobile is-multiline">
      {% for day in city.forecast %}
      <div class="column is-one-seventh">
        <div class="card has-text-centered">
          <div class="card-content p-3">
            <p class="title is-6">{{ day.day }}</p>
            <img src="/images/{{ day.condition }}.png" class="weather-icon">
            <p class="subtitle is-6">{{ day.maxTempC }}°C</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

  </div>
</section>
